# frozen_string_literal: true

wb = xlsx_package.workbook
wb.add_worksheet(name: 'Cosa') do |sheet|
  sheet.add_row [
    @clase_modelo.human_attribute_name(:nombre),
    @clase_modelo.human_attribute_name(:apellido),
    @clase_modelo.human_attribute_name(:persona)
  ]

  @cosas.decorate.each do |cosa|
    sheet.add_row [
      cosa.nombre,
      cosa.apellido,
      cosa.persona
    ]
  end
end
