$(function() {
  var modal = $('<%= j render contenido %>').modal();

  <% if defined? extra_js %>
    <% [extra_js].flatten.each do |partial| %>
      <%= render partial: partial %>
    <% end %>
  <% end %>
  $(modal).on('hidden.bs.modal', function () {
    $(this).data('bs.modal', null);
    $(this).remove();
  });
  PgRails.bindear('.modal')
});
